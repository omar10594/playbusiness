<div class="card">
    <div class="card-header d-flex">
        <h3 class="card-title mb-0">
            <%= @startup.name %>
        </h3>
        <div class="card-actions ml-auto py-0">
            <%= link_to 'Edit', edit_startup_path(@startup), class: 'btn btn-primary' %>
        </div>
    </div>
    <div class="card-body">
        <p class="card-text">
            <%= @startup.description %>
        </p>
    </div>
</div>